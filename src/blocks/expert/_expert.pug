mixin expert(params)
    .expert#services
        .container
            +title(params.title).expert__title
            .expert__items
                .row
                    each val, index in params.titles
                        .col-12.col-md-6.col-lg-4
                            .expert__item
                                .expert__icon
                                    img(src=`./img/icon${index}.png`, alt="")
                                h3.expert__in= val
                                p.expert__text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.  Ut enim ad minim 
